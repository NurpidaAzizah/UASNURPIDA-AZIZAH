<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@drawable/bc"
    android:layout_height="fill_parent"
    >


    <TableRow
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:paddingTop="10px">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="131dp"
            android:layout_height="187dp"
            app:srcCompat="@drawable/nurpida" />
    </TableRow>

    <TableRow
        android:layout_width="248dp"
        android:layout_height="204dp"
        android:layout_marginTop="20dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="Nama   :"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/screenName"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="NURPIDA AZIZAH"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

    </TableRow>


    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="NIM      :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/NIM"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="180201031"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Prodi    :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/prodi"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="SISTEM INFORMASI"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Alamat :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="DASAN GEDANG DAYA DENGGEN TIMUR"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

    </TableRow>


    <TableRow
        android:gravity="center"
        android:layout_marginTop="20dip" >

        <Button
            android:text="Terimakasih"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save" android:layout_span="2" ></Button>
    </TableRow>

</TableLayout>