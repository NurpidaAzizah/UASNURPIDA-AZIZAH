<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bcccc"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="29sp"
        android:layout_marginBottom="32dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btn_buka_merek_gamis"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/bccc"
            android:src="@drawable/gamis_5"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/btn_buka_merek_hijab"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/bccc"
            android:src="@drawable/hijab_6"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/btn_buka_merek_mukenah"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/bccc"
            android:src="@drawable/mukenah_1"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilih_gambar"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"
        />

    <Button
        android:id="@+id/btn_MyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MyProfile"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="MyProfile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/pilih_profil"
        android:textStyle="italic"
        android:textColor="#000000" />



</LinearLayout>